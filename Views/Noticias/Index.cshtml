@model Noticias
@{
    ViewData["Title"] = "Noticias";
}

<form action="@Url.Action("Cadastrar")" method="post">

    <label for="IdNoticias">IdNoticias</label>
    <input tye="text" name="IdNoticias" id="IdNoticias">

    <label for="Titulo">Titulo</label>
    <input tye="text" name="Titulo" id="Titulo">

    <label for="Texto">Textoo</label>
    <input tye="text" name="Texto" id="Texto">

    <label for="Imagem">Imagem</label>
    <input tye="text" name="Imagem" id="Imagem">

    <button type="submit">Cadastrar</button>

</form>

<table class="table table-responsive table-striped">
    <thead>
        <th>Id</th>
        <th>Titulo</th>
        <th>Texto</th>
        <th>Imagem</th>
    </thead>
    <tbody>
        @foreach (var item in  ViewBag.Noticias){
            <tr>
                <td>@item.IdNoticias</td>
                <td>@item.Titulo</td>
                <td>@item.Texto</td>
                <td>@item.Imagem</td>
            </tr>
        }
    </tbody>
</table>