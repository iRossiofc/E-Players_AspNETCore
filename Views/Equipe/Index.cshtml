@model Equipe
@{
    ViewData["Title"] = "Equipe";
}

<form action="@Url.Action("Cadastrar")" method="post" enctype="multipart/form-data">

    <label for="IdEquipe">IdEquipe</label>
    <input type="text" name="IdEquipe" id="IdEquipe">

    <label for="Nome">Nome</label>
    <input type="text" name="Nome" id="Nome">

    <label for="Imagem">Imagem</label>
    <input type="file" name="Imagem" id="Imagem">

    <button type="submit">Cadastrar</button>

</form>

<table class="table table-responsive table-striped">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Imagem</th>
        <th>Ações</th>
    </thead>
    <tbody>
        @foreach (var item in  ViewBag.Equipes){
            <tr>
                <td>@item.IdEquipe</td>
                <td>@item.Nome</td>
                <td>
                    <img src="img/Equipes/@item.Imagem" alt="Imagens da equipe @item.Nome">
                </td>
                <td>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@item.IdEquipe">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>